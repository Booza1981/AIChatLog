# Chat History Search - Environment Configuration
# Copy this file to .env and customize as needed

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=2

# Logging
LOG_LEVEL=INFO

# Backend API host port
BACKEND_PORT=8000

# Frontend UI host port
FRONTEND_PORT=3000

# VNC Password (for initial authentication setup)
# Change this to a secure password
VNC_PASSWORD=changeme123

# Chromium (KasmVNC) credentials and timezone
BROWSER_USER=admin
BROWSER_PASSWORD=changeme
TZ=Etc/UTC

# Optional: bind-mount Chromium profile directory (otherwise uses named volume)
# Example: /home/booza/Docker/aichatlog/chromium-config
CHROMIUM_CONFIG_PATH=

# Database Configuration (optional overrides)
# DATABASE_PATH=/app/volumes/database/conversations.db
# PROFILES_PATH=/app/volumes/browser-profiles

# Optional: bind-mount database directory (otherwise uses ./volumes/database)
# Example: /home/booza/Docker/aichatlog/database
DATABASE_VOLUME_PATH=

# Optional: bind-mount browser profiles directory (otherwise uses ./volumes/browser-profiles)
# Example: /home/booza/Docker/aichatlog/browser-profiles
BROWSER_PROFILES_PATH=

# API Configuration (for future use)
# API_KEY=your-secret-api-key-here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
