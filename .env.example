# Chat History Search - Environment Configuration
# Copy this file to .env and customize as needed

# Logging
LOG_LEVEL=INFO

# Backend API host port
BACKEND_PORT=8000

# Frontend UI host port
FRONTEND_PORT=3000

# Chromium (KasmVNC) timezone
TZ=Etc/UTC

# Optional: bind-mount Chromium profile directory (otherwise uses named volume)
# Example: /home/booza/Docker/aichatlog/chromium-config
CHROMIUM_CONFIG_PATH=

# Optional: bind-mount database directory (otherwise uses ./volumes/database)
# Example: /home/booza/Docker/aichatlog/database
DATABASE_VOLUME_PATH=

# API Configuration (for future use)
# API_KEY=your-secret-api-key-here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
